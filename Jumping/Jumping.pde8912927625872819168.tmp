// player position
float x;
float y;
// player direction
float dx;
float dy;
// player speed
float speed;

float gravity;

// keys
boolean right;
boolean left;
boolean jump;
boolean isJumping;

void setup(){
  size(800,600);
  
  x = 100;
  y = 500;
  dx = 0;
  dy = 0;
  speed = 3;
  gravity = 2;
  
  right = false;
  left = false;
  jump = false;
  isJumping = false;
}

void draw(){
  background(0);
  
  // left/right movement control
  if(right){
    dx = 1;
  }else if(left){
    dx = -1;
  }else{
    dx = 0;
  }
  // move the player
  x = x + dx*speed;
  
  // gravity changing y movement
  dy = dy + gravity;
  y = y + dy;
  
  
  // draw the player
  fill(255);
  rect(x,y,50,50); // player
  
}

void keyPressed(){
  if(key == 'd'){
    right = true;
  }else if(key == 'a'){
    left = true;
  }else if(key == ' '){
    jump = true;
  }
}

void keyReleased(){
  if(key == 'd'){
    right = false;
  }else if(key == 'a'){
    left = false;
  }else if(key == ' '){
    jump = false;
  }
}